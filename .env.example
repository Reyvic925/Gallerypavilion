# Environment Variables for Gallery Pavilion
# Copy this file to .env.local and fill in your actual values

# Database Configuration
# For Vercel deployment, this will be automatically set by Vercel Postgres
# For local development, use your local PostgreSQL instance
DATABASE_URL="postgresql://username:password@localhost:5432/gallerypavilion"

# NextAuth Configuration
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
NEXTAUTH_SECRET="28ec8243d5fe2c65fce850988be5e00a038827222a7bdcdc59d083b932f32ceb"
# For production: https://your-app-name.vercel.app
# For local development: http://localhost:3001
NEXTAUTH_URL="https://your-app-name.vercel.app"

# Email Provider Configuration
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
# Use App Password for Gmail (not your regular password)
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="your-email@gmail.com"

# Application Configuration
# Set this to your production domain (same as NEXTAUTH_URL)
APP_URL="https://your-app-name.vercel.app"
ADMIN_EMAIL="admin@gallerypavilion.com"
ADMIN_PASSWORD="admin123"

# Photographer Setup Configuration
# Required for setup-photographer.js script
PHOTOGRAPHER_EMAIL="photographer@example.com"
PHOTOGRAPHER_PASSWORD="secure-password-123"
PHOTOGRAPHER_NAME="John Doe"
PHOTOGRAPHER_BUSINESS_NAME="Doe Photography Studio"
PHOTOGRAPHER_PHONE="+1234567890"
PHOTOGRAPHER_WEBSITE="https://doephotography.com"
PHOTOGRAPHER_PORTFOLIO="https://portfolio.doephotography.com"
PHOTOGRAPHER_EXPERIENCE="Professional"
PHOTOGRAPHER_BIO="Professional photographer with years of experience"

# Optional: AI Services (uncomment if needed)
