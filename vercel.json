{
  "buildCommand": "npm run build",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        { "type": "host", "value": "gallerypavilion.com" }
      ],
      "destination": "https://www.gallerypavilion.com/:path*",
      "permanent": true
    }
  ]
}